<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".course.CourseActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCourse"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple"
        app:title="Khóa học"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Ký Khóa Học"></Button>

        <Button
            android:id="@+id/btnRegisted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khóa Học Đã Đăng Ký"></Button>
    </LinearLayout>


</LinearLayout>